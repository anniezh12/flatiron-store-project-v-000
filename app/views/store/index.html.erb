

<h2>Categories</h2>
<% Category.all.each do |category| %>
  <%= link_to category.title, category_path(category) %>
<% end %>
<h2>Items</h2>

<% if !Item.available_items.empty? %>
<% Item.available_items.each do |item| %>
  <p><%= item.title %> | <%= "$#{item.price.to_f/100}" %> |
     <%= button_to 'Add to Cart', line_items_path(item_id: item) if user_signed_in? %></p>
<% end %>
<% end %>
